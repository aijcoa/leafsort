{
  "name": "leafview",
  "productName": "LeafView",
  "description": "A minimalist image viewer based on Leaflet.js and Electron.",
  "version": "1.9.1",
  "license": "MIT",
  "author": {
    "name": "sprout2000"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sprout2000/leafview.git"
  },
  "main": "dist/main.js",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:vite": "vite build --mode dev",
    "dev:tsc": "tsc -w -p tsconfig.main.json",
    "dev:electron": "wait-on dist/main.js && cross-env NODE_ENV=\"development\" electron .",
    "build": "run-s build:*",
    "build:vite": "tsc && vite build",
    "build:esbuild": "tsx ./esbuild.ts",
    "preview": "electron .",
    "package": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=\"false\" ts-node scripts/build.ts",
    "release": "ts-node scripts/build.ts",
    "prebuild": "npm r @typescript-eslint/eslint-plugin @typescript-eslint/parser electron-reload eslint eslint-config-prettier eslint-plugin-react eslint-plugin-react-hooks prettier wait-on --no-save"
  },
  "dependencies": {
    "electron-log": "^4.4.7",
    "electron-updater": "^5.0.1",
    "electron-window-state": "^5.0.3",
    "i18next": "^21.8.8",
    "leaflet": "^1.8.0",
    "mime-types": "^2.1.35",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@types/leaflet": "^1.7.10",
    "@types/mime-types": "^2.1.1",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.5",
    "@vitejs/plugin-react": "^1.3.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "electron": "^19.0.3",
    "electron-builder": "^23.0.3",
    "electron-notarize": "^1.2.1",
    "electron-search-devtools": "^1.8.3",
    "esbuild": "^0.14.42",
    "esbuild-ifdef": "^0.1.8",
    "npm-run-all": "^4.1.5",
    "sass": "^1.52.2",
    "tsx": "^3.4.2",
    "typescript": "^4.7.3",
    "vite": "^2.9.9"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "prettier": "^2.6.2",
    "wait-on": "^6.0.1"
  }
}
