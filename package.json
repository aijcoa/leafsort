{
  "name": "leafview",
  "productName": "LeafView",
  "description": "An image viewer based on leaflet.js",
  "version": "0.11.9",
  "license": "MIT",
  "author": {
    "name": "sprout2000",
    "url": "https://github.com/sprout2000"
  },
  "homepage": "https://sprout2000.github.io/leafview/",
  "repository": {
    "type": "git",
    "url": "git@github.com:sprout2000/leafview.git"
  },
  "bugs": {
    "url": "https://github.com/sprout2000/leafview/issues"
  },
  "keywords": [
    "image-viewer",
    "electron",
    "pan",
    "zoom",
    "cross-platform"
  ],
  "engines": {
    "node": ">=14"
  },
  "main": "dist/main.js",
  "scripts": {
    "start": "run-s clean build serve",
    "serve": "electron .",
    "clean": "rimraf dist release",
    "build": "cross-env NODE_ENV=\"development\" webpack --progress",
    "build:prod": "cross-env NODE_ENV=\"production\" webpack --progress",
    "build:unsign": "ts-node scripts/build-unsign.ts",
    "build:appx": "ts-node scripts/build-appx.ts",
    "build:darwin": "ts-node scripts/build.ts",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix",
    "lint:prettier": "prettier --write .",
    "package": "run-s clean build:prod build:unsign",
    "package:appx": "run-s clean build:prod build:appx",
    "package:darwin": "run-s clean build:prod build:darwin",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint"
  },
  "dependencies": {
    "electron-log": "^4.3.5",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "i18next": "^20.3.2",
    "leaflet": "^1.7.1",
    "mime-types": "^2.1.31",
    "natsort": "^2.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/leaflet": "^1.7.4",
    "@types/mime-types": "^2.1.0",
    "@types/mini-css-extract-plugin": "^2.0.0",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.13",
    "@types/react-dom": "^17.0.8",
    "@types/resize-observer-browser": "^0.1.5",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.6",
    "dotenv": "^10.0.0",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "electron-notarize": "^1.0.0",
    "html-webpack-plugin": "^5.3.2",
    "mini-css-extract-plugin": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.35.1",
    "sass-loader": "^12.1.0",
    "simple-git-hooks": "^2.5.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5",
    "webpack": "^5.43.0",
    "webpack-cli": "^4.7.2"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.3.2"
  }
}
