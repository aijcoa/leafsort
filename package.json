{
  "name": "leafview",
  "productName": "LeafView",
  "description": "An image viewer based on leaflet.js",
  "version": "0.8.0",
  "license": "MIT",
  "author": {
    "name": "sprout2000",
    "url": "https://github.com/sprout2000"
  },
  "homepage": "https://sprout2000.github.io/leafview/",
  "repository": {
    "type": "git",
    "url": "git@github.com:sprout2000/leafview.git"
  },
  "bugs": {
    "url": "https://github.com/sprout2000/leafview/issues"
  },
  "keywords": [
    "image-viewer",
    "electron",
    "pan",
    "zoom",
    "cross-platform"
  ],
  "main": "dist/main.js",
  "scripts": {
    "start": "run-s clean build serve",
    "serve": "electron .",
    "clean": "rimraf dist release",
    "build": "cross-env NODE_ENV=\"development\" webpack --progress",
    "build:prod": "cross-env NODE_ENV=\"production\" webpack --progress",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix",
    "lint:prettier": "prettier --write .",
    "lint-staged": "lint-staged",
    "prepackage": "run-s clean build:prod",
    "package": "ts-node scripts/build-unsign.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "yarn lint:eslint",
      "yarn lint:prettier"
    ]
  },
  "dependencies": {
    "electron-log": "^4.3.2",
    "electron-updater": "^4.3.8",
    "electron-window-state": "^5.0.3",
    "i18next": "^19.9.1",
    "leaflet": "^1.7.1",
    "mime-types": "^2.1.29",
    "natsort": "^2.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@types/css-minimizer-webpack-plugin": "^1.1.1",
    "@types/leaflet": "^1.5.23",
    "@types/mime-types": "^2.1.0",
    "@types/mini-css-extract-plugin": "^1.2.2",
    "@types/node": "^14.14.32",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.1",
    "@types/resize-observer-browser": "^0.1.5",
    "@types/terser-webpack-plugin": "^5.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.1",
    "css-minimizer-webpack-plugin": "^1.2.0",
    "dotenv": "^8.2.0",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "electron-notarize": "^1.0.0",
    "html-webpack-plugin": "^5.3.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.3.9",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1"
  }
}
