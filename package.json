{
  "name": "leafview",
  "productName": "LeafView",
  "description": "A minimalist image viewer based on Leaflet.js and Electron.",
  "version": "1.6.5",
  "license": "MIT",
  "author": {
    "name": "sprout2000",
    "url": "https://github.com/sprout2000",
    "email": "sogacey512@iistoria.com"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sprout2000/leafview.git"
  },
  "bugs": {
    "url": "https://github.com/sprout2000/leafview/issues"
  },
  "keywords": [
    "image-viewer"
  ],
  "engines": {
    "node": ">=14.17"
  },
  "main": "dist/main.js",
  "scripts": {
    "predev": "rimraf dist",
    "dev": "run-p dev:*",
    "dev:tsc": "tsc -w -p tsconfig.main.json",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html && cross-env NODE_ENV=\"development\" electron .",
    "serve": "electron .",
    "clean": "rimraf dist release",
    "start": "run-s clean build serve",
    "build": "cross-env NODE_ENV=\"production\" webpack --progress",
    "build:unsign": "cross-env UNSIGN=true ts-node scripts/build.ts",
    "build:darwin": "ts-node scripts/build.ts",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --fix .",
    "lint:prettier": "prettier --write .",
    "release": "ts-node scripts/build.ts",
    "package": "run-s clean build build:unsign",
    "package:darwin": "run-s clean build build:darwin",
    "prepare": "git config --local core.hooksPath hooks"
  },
  "dependencies": {
    "electron-log": "^4.4.3",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.1",
    "i18next": "^21.6.3",
    "leaflet": "^1.7.1",
    "mime-types": "^2.1.34",
    "natsort": "^2.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1"
  },
  "devDependencies": {
    "@types/leaflet": "^1.7.7",
    "@types/mime-types": "^2.1.1",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/node": "^17.0.4",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "copy-webpack-plugin": "^10.2.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "dotenv": "^10.0.0",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "electron-notarize": "^1.1.1",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-search-devtools": "^1.5.1",
    "html-webpack-plugin": "^5.5.0",
    "ifdef-loader": "^2.3.2",
    "mini-css-extract-plugin": "^2.4.5",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "4.5.4",
    "wait-on": "^6.0.0",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "prettier": "^2.5.1"
  }
}
