{
  "name": "leafview",
  "productName": "LeafView",
  "description": "An image viewer based on leaflet.js",
  "version": "1.0.6",
  "license": "MIT",
  "author": {
    "name": "sprout2000",
    "url": "https://github.com/sprout2000"
  },
  "homepage": "https://sprout2000.github.io/leafview/",
  "repository": {
    "type": "git",
    "url": "git@github.com:sprout2000/leafview.git"
  },
  "bugs": {
    "url": "https://github.com/sprout2000/leafview/issues"
  },
  "keywords": [
    "image-viewer",
    "electron",
    "pan",
    "zoom",
    "cross-platform"
  ],
  "main": "dist/main.js",
  "scripts": {
    "start": "run-s clean build serve",
    "predev": "rimraf dist",
    "dev": "run-p dev:*",
    "dev:electron": "wait-on ./dist/index.html && cross-env NODE_ENV=\"development\" electron .",
    "dev:tsc": "tsc -w -p tsconfig.main.json",
    "dev:webpack": "webpack --watch",
    "serve": "electron .",
    "clean": "rimraf dist release",
    "build": "webpack --config webpack.config.prod.ts --progress",
    "build:unsign": "ts-node scripts/build-unsign.ts",
    "build:appx": "ts-node scripts/build-appx.ts",
    "build:darwin": "ts-node scripts/build.ts",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint . --ext .ts,.tsx --fix",
    "lint:prettier": "prettier --write .",
    "package": "run-s clean build build:unsign",
    "package:appx": "run-s clean build build:appx",
    "package:darwin": "run-s clean build build:darwin",
    "prepare": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint"
  },
  "dependencies": {
    "electron-log": "^4.4.1",
    "electron-store": "^8.0.0",
    "electron-updater": "^4.3.9",
    "i18next": "^20.4.0",
    "leaflet": "^1.7.1",
    "mime-types": "^2.1.32",
    "natsort": "^2.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/leaflet": "^1.7.4",
    "@types/mime-types": "^2.1.1",
    "@types/mini-css-extract-plugin": "^2.2.0",
    "@types/node": "^16.7.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/resize-observer-browser": "^0.1.6",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.2.0",
    "dotenv": "^10.0.0",
    "electron": "^13.2.2",
    "electron-builder": "^22.11.7",
    "electron-notarize": "^1.1.0",
    "html-webpack-plugin": "^5.3.2",
    "ifdef-loader": "^2.3.0",
    "mini-css-extract-plugin": "^2.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.38.1",
    "sass-loader": "^12.1.0",
    "simple-git-hooks": "^2.6.1",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "electron-reload": "^1.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.3.2",
    "wait-on": "^6.0.0"
  },
  "resolutions": {
    "electron-builder/dmg-builder/dmg-license/plist/xmldom": "github:xmldom/xmldom#0.7.0"
  }
}
